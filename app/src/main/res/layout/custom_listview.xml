<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Title"
        android:textSize="12sp"
        android:layout_marginTop="18dp"
        android:layout_alignStart="@+id/contentId" />

    <TextView
        android:id="@+id/readcount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2222222"
        android:layout_marginEnd="20dp"
        android:layout_alignTop="@+id/contentId"
        android:layout_alignParentEnd="true" />

    <TextView
        android:id="@+id/contentId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:layout_marginStart="18dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="조횟수"
        android:id="@+id/textView"
        android:layout_alignTop="@+id/readcount"
        android:layout_toStartOf="@+id/readcount" />


</RelativeLayout>
